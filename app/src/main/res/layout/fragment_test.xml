<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.TestFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:id="@+id/tvPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/borde_redondo"
            android:text="@string/pregunta"
            android:textSize="17sp"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@id/tvResultado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:padding="10dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/tvRespuesta1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPregunta">

        </TextView>


        <Button
            android:id="@+id/tvRespuesta1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="respuesta1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:background="@drawable/borde_redondo"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvResultado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvRespuesta2"/>

        <Button
            android:id="@+id/tvRespuesta2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="respuesta2"
            android:textSize="18sp"
            android:textAlignment="center"
            android:background="@drawable/borde_redondo"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvRespuesta3"
            app:layout_constraintTop_toBottomOf="@id/tvRespuesta1"/>

        <Button
            android:id="@+id/tvRespuesta3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="respuesta3"
            android:textSize="18sp"
            android:textAlignment="center"
            android:background="@drawable/borde_redondo"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvRespuesta4"
            app:layout_constraintTop_toBottomOf="@id/tvRespuesta2"/>

        <Button
            android:id="@+id/tvRespuesta4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="respuesta4"
            android:textSize="18sp"
            android:textAlignment="center"
            android:background="@drawable/borde_redondo"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvRespuesta3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>