<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.RepasoFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvRepasoPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pregunta de repaso para completar el hueco libre ________"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvRespuestas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <TextView
            android:id="@+id/tvRespuestas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posibles respuestas: "
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvRepasoPregunta"
            app:layout_constraintBottom_toTopOf="@id/btnRespuesta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </TextView>

        <Button
            android:id="@+id/btnRespuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comprobar"
            app:layout_constraintTop_toBottomOf="@id/tvRespuestas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/botonesComprobar"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>