<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.TableroFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- TextView para informaci贸n del Jugador 1 -->
        <TextView
            android:id="@+id/tvInfoJugador1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info Jugador 1"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#CCCCCC"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="56dp" />

        <!-- TextView para informaci贸n del Jugador 2 -->
        <TextView
            android:id="@+id/tvInfoJugador2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info Jugador 2"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#CCCCCC"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="56dp" />

        <!-- GridLayout para el tablero -->
        <GridLayout
            android:id="@+id/gridLayoutTablero"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/tvInfoJugador1"
            android:layout_above="@id/tvInfoPartida"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:columnCount="6"
            android:rowCount="6"
            android:orientation="horizontal">

            <!-- Borde superior -->

            <View style="@style/CasillaJuegoParejas"
                android:layout_row="0"
                android:layout_column="0"
                />
            <View style="@style/CasillaTest"
                android:layout_row="0"
                android:layout_column="1"
                />
            <View style="@style/CasillaAdivinaPalabra"
                android:layout_row="0"
                android:layout_column="2"
                />
            <View style="@style/CasillaRepaso"
                android:layout_row="0"
                android:layout_column="3"
                />

            <View style="@style/CasillaJuegoParejas"
                android:layout_row="0"
                android:layout_column="4"
                />
            <View style="@style/CasillaTest"
                android:layout_row="0"
                android:layout_column="5"
                />


            <!-- Fila 1 -->

            <View style="@style/CasillaRepaso"
                android:layout_row="1"
                android:layout_column="0"
                />


            <View style="@style/CasillaAdivinaPalabra"
                android:layout_row="1"
                android:layout_column="5"
                />

            <!-- Fila 2 -->

            <View style="@style/CasillaAdivinaPalabra"
                android:layout_row="2"
                android:layout_column="0"
                />



            <View style="@style/CasillaRepaso"
                android:layout_row="2"
                android:layout_column="5"
                />


            <View style="@style/CasillaTest"
                android:layout_row="3"
                android:layout_column="0"
                />


            <View style="@style/CasillaJuegoParejas"
                android:layout_row="3"
                android:layout_column="5"
                />



            <View style="@style/CasillaJuegoParejas"
                android:layout_row="4"
                android:layout_column="0"
                />


            <View style="@style/CasillaPruebaFinal"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_rowSpan="2"

                />


            <View style="@style/CasillaTest"
                android:layout_row="4"
                android:layout_column="5"
                />

            <View style="@style/CasillaRepaso"
                android:layout_row="5"
                android:layout_column="0"
                />
            <View style="@style/CasillaAdivinaPalabra"
                android:layout_row="5"
                android:layout_column="1"
                />
            <View style="@style/CasillaTest"
                android:layout_row="5"
                android:layout_column="2"
                />
            <View style="@style/CasillaJuegoParejas"
                android:layout_row="5"
                android:layout_column="3"
                />

            <View style="@style/CasillaRepaso"
                android:layout_row="5"
                android:layout_column="4"
                />
            <View style="@style/CasillaAdivinaPalabra"
                android:layout_row="5"
                android:layout_column="5"
                />



        </GridLayout>

        <!-- TextView para informaci贸n de la partida -->
        <TextView
            android:id="@+id/tvInfoPartida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turno del Jugador 1"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#CCCCCC"
            android:layout_alignParentBottom="true" />

        <!-- Bot贸n para tirar el dado -->
        <Button
            android:id="@+id/btnTirarDado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tirar Dado"
            android:layout_below="@id/tvInfoPartida"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </RelativeLayout>


</FrameLayout>