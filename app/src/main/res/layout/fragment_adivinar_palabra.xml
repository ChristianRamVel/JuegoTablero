<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    tools:context=".view.AdivinarPalabraFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvEnunciadoAdivinarPalabra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="enunciado"
            app:layout_constraintBottom_toTopOf="@id/tvIntentosAdivinarPalabra"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tvIntentosAdivinarPalabra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="intentos : 5"
            app:layout_constraintBottom_toTopOf="@id/tvPalabraAdivinar"
            app:layout_constraintTop_toBottomOf="@id/tvEnunciadoAdivinarPalabra"></TextView>

        <TextView
            android:id="@+id/tvPalabraAdivinar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="400dp"
            android:gravity="center"
            android:text="palabraOculta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvIntentosAdivinarPalabra"></TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>